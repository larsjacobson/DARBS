<rule name="Add Consonant Intervals">
    <precondition type="not">
        <request type="present">
            <partition name="consonantIntervals" />
        </request>
    </precondition>

    <action>
        <request type="add">
            <partition name="consonantIntervals">
                <pattern>
                    Minor Third
                </pattern>
                <pattern>
                    Major Third
                </pattern>
                <pattern>
                    Perfect Fifth
                </pattern>
                <pattern>
                    Minor Sixth
                </pattern>
                <pattern>
                    Major Sixth
                </pattern>
                <pattern>
                    Octave
                </pattern>
            </partition>
        </request>
    </action>
</rule>
