<rule name="Add Melodic Intervals">
    <precondition type="not">
        <request type="present">
            <partition name="melodicIntervals" />
        </request>
    </precondition>

    <action>
        <request type="add">
            <partition name="melodicIntervals">
                <pattern>
                    Minor Second
                </pattern>
                <pattern>
                    Major Second
                </pattern>
                <pattern>
                    Minor Third
                </pattern>
                <pattern>
                    Major Third
                </pattern>
                <pattern>
                    Perfect Fourth
                </pattern>
                <pattern>
                    Perfect Fifth
                </pattern>
                <pattern>
                    Octave
                </pattern>
            </partition>
        </request>
    </action>
</rule>
