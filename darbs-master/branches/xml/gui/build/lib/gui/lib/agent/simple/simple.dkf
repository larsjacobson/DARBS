<agent name="Simple example" type="procedural" fireable="true">
    <precondition type="not">
        <request type="present">
            <partition name="temp" />
        </request>
    </precondition>
    <action>
        <request type="add">
            <partition name="temp">
                <pattern>
                    The temperature in Leicester is 21
                </pattern>
            </partition>
        </request>
    </action>
</agent>
    
